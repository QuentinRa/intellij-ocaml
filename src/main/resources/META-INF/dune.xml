<idea-plugin>
    <extensions defaultExtensionNs="com.intellij">
        <!-- FILES -->
        <fileType fileNames="dune;dune-project;jbuild" name="Dune File" language="Dune" fieldName="INSTANCE"
                  implementationClass="com.dune.ide.files.DuneFileType"/>

        <!-- PARSER -->
        <lang.parserDefinition language="Dune" implementationClass="com.dune.language.parser.DuneParserDefinition"/>

        <!-- HIGHLIGHT -->
        <lang.syntaxHighlighterFactory language="Dune" implementationClass="com.dune.ide.highlight.DuneSyntaxHighlighterFactory"/>
        <colorSettingsPage implementation="com.dune.ide.settings.DuneColorSettingsPage"/>

        <!-- ANNOTATOR -->
        <annotator language="Dune" implementationClass="com.dune.ide.annotator.DuneHighlightingAnnotator"/>

        <!--
            psiStructureViewFactory
            foldingBuilder
            ast.factory
            commenter
            braceMatcher
        -->
    </extensions>
</idea-plugin>